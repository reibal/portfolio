---
import GithubIcon from "../../icons/technologies/GithubIcon.astro";
import LinkedinIcon from "../../icons/technologies/LinkedinIcon.astro";
import EmailIcon from "../../icons/EmailIcon.astro";
---

<footer
  class="bg-gray-300/80 dark:bg-gray-800 text-gray-800 dark:text-gray-200 py-3"
>
  <div class="container mx-auto px-4">
    <div class="flex justify-center gap-4 text-4xl">
      <a
        href="https://github.com/KazzK94"
        target="_blank"
        class="hover:text-orange-500 hover:scale-110 transition-all"
        aria-label="GitHub"
      >
        <GithubIcon class="size-10" stroke-width="1.8" />
      </a>
      <a
        href="https://www.linkedin.com/in/ivan-kazz/"
        target="_blank"
        class="hover:text-orange-500 hover:scale-110 transition-all cursor-pointer"
        aria-label="LinkedIn"
      >
        <LinkedinIcon class="size-10" stroke-width="1.8" />
      </a>
      <a
        id="emailIcon"
        href="mailto:ireinaballester@gmail.com"
        class="hover:text-orange-500 hover:scale-110 transition-all cursor-pointer"
        aria-label="E-mail"
      >
        <EmailIcon class="size-10" stroke-width="1.8" />
      </a>
    </div>
  </div>
</footer>
