---
import SectionContainer from "../SectionContainer.astro";
import SectionTitle from "../SectionTitle.astro";

// i18n import
import { getI18n } from "../../../i18n";
import ContactSectionIcon from "../../icons/sections/ContactSectionIcon.astro";
// i18n setup
const { currentLocale } = Astro;
const i18n = getI18n({ currentLocale });
---

<SectionContainer>
  <SectionTitle>
    <span slot="icon">
      <ContactSectionIcon class="size-8 md:size-9" stroke-width="1.8" />
    </span>

    <span slot="title">{i18n.CONTACT_ME}</span>
  </SectionTitle>

  <form class="flex flex-col gap-4" name="contact" data-netlify="true">
    <input
      name="name"
      type="text"
      placeholder={i18n.FORM_NAME_PLACEHOLDER}
      required
      class="w-full px-4 py-2 rounded-md dark:bg-gray-700 border dark:border-gray-600"
    />
    <input
      name="email"
      type="email"
      placeholder={i18n.FORM_EMAIL_PLACEHOLDER}
      required
      class="w-full px-4 py-2 rounded-md dark:bg-gray-700 border dark:border-gray-600"
    />
    <textarea
      name="message"
      placeholder={i18n.FORM_MESSAGE_PLACEHOLDER}
      required
      class="w-full px-4 py-2 rounded-md overflow-y-auto dark:bg-gray-700 border dark:border-gray-600 min-h-32 resize-none [field-sizing:content]"
    ></textarea>
    <button
      type="submit"
      class="w-full text-white text-lg bg-orange-500 hover:bg-orange-600 dark:bg-orange-700 dark:hover:bg-orange-700/90 px-6 py-2 rounded-md"
      >{i18n.FORM_SEND_BUTTON}</button
    >
  </form>
</SectionContainer>
