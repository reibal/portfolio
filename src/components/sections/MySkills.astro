---
import SectionContainer from "../SectionContainer.astro";

// i18n import
import { getI18n } from "../../i18n";
// i18n setup
const { currentLocale } = Astro;
const i18n = getI18n({ currentLocale });

// Data
const skills = [
  "HTML",
  "CSS",
  "JavaScript",
  "TypeScript",
  "React",
  "NextJS",
  "Astro",
  "Tailwind",
  "React Native",
  "NodeJS",
  "Express",
  "MySQL",
  "MongoDB",
  "Git",
  "GitHub",
];
---

<SectionContainer>
  <h1 class="text-3xl md:text-4xl font-bold mb-5 md:mb-7 drop-shadow">
    <span class="text-orange-500/95 dark:text-orange-400">&lt;/&gt;</span>
    <span class="text-amber-500 dark:text-amber-400 ml-1">{i18n.MY_SKILLS}</span>
  </h1>
  <div class="flex flex-wrap justify-start gap-4">
    {
      skills.map((skill) => (
        <span class="border border-orange-300 bg-orange-100/60 dark:bg-amber-800 text-orange-800/90 dark:text-white px-4 py-2 rounded-full text-sm font-semibold">
          {skill}
        </span>
      ))
    }
  </div>
</SectionContainer>
