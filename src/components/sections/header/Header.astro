---
import SectionContainer from "../SectionContainer.astro";
import LocalizedText from "../../LocalizedText.astro";
import Badge from "../../Badge.astro";

// i18n import
import { getI18n } from "../../../i18n";

// i18n setup
const { currentLocale = "es" } = Astro;
const i18n = getI18n({ currentLocale });
---

<SectionContainer>
  <div
    class="flex flex-col md:flex-row justify-center items-center lg:mx-6 px-4 md:px-10 text-center gap-8"
  >
    <img
      class="size-40 md:size-44 lg:size-56 aspect-square rounded-full border-4 border-amber-600 dark:border-orange-400 border-opacity-80 shadow-md shadow-amber-500/40"
      src="/images/pfp.avif"
      alt="Kazz's Profile Picture"
    />
    <div>
      <h1 class="text-4xl sm:text-5xl lg:text-6xl drop-shadow-sm">
        <LocalizedText
          i18nLocalizedText={i18n.HEADER_TITLE}
          replaceFrom="%%name%%"
          replaceTo=`${i18n.DEV_NAME}`
          className="font-bold text-gradient-to-br from-orange-400 via-amber-500 to-orange-500/90 dark:from-orange-400 dark:to-amber-400"
        />
      </h1>
      <h2
        class="text-xl md:text-2xl lg:text-3xl mt-1 md:mt-2 font-bold text-black/70 dark:text-slate-200"
      >
        <LocalizedText
          i18nLocalizedText={i18n.HEADER_SUBTITLE}
          replaceFrom="%%webdev%%"
          replaceTo={i18n.HEADER_SUBTITLE_WEBDEV}
          className="text-gradient-to-br from-orange-500 via-amber-500 to-orange-500 dark:from-orange-400/95 dark:via-amber-400/90 dark:to-orange-400/95"
        />
      </h2>

      <p class="mt-3 mx-auto md:px-6 lg:text-lg text-pretty">
        <LocalizedText
          i18nLocalizedText={i18n.HEADER_TEXT_1}
          replaceFrom="%%highlight%%"
          replaceTo={i18n.HEADER_TEXT_1_HIGHLIGHT}
          className="text-amber-500 font-semibold dark:text-amber-300"
        />
        <LocalizedText
          i18nLocalizedText={i18n.HEADER_TEXT_2}
          replaceFrom="%%highlight%%"
          replaceTo={i18n.HEADER_TEXT_2_HIGHLIGHT}
          className="text-amber-500 font-semibold dark:text-amber-300"
        />
      </p>

	  <p class="mt-2 italic text-sm text-red-500 dark:text-red-300">
		{i18n.HEADER_DISCLAIMER}
	  </p>

      <Badge class="text-sm mt-4" color="green">
        {i18n.AVAILABLE_FOR_WORK}
      </Badge>
    </div>
  </div>
</SectionContainer>
