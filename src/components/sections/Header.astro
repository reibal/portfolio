---
import SectionContainer from "../SectionContainer.astro";
import LocalizedText from "../LocalizedText.astro";

// i18n import
import { getI18n } from "../../i18n";

// i18n setup
const { currentLocale = "es" } = Astro;
const i18n = getI18n({ currentLocale });
---

<SectionContainer>
  <div
    class="flex flex-col md:flex-row justify-center items-center text-center gap-8 md:gap-12"
  >
    <img
      class="size-40 md:size-48 aspect-square rounded-full border-4 border-amber-600 dark:border-orange-400 border-opacity-80 shadow-md shadow-amber-500/40"
      src="/images/pfp.webp"
      alt="Kazz's Profile Picture"
    />
    <div>
      <h1 class="text-4xl md:text-5xl lg:text-6xl drop-shadow">
        <LocalizedText
          i18nLocalizedText={i18n.HEADER_TITLE}
          replaceFrom="%%name%%"
          replaceTo=`${i18n.DEV_NAME}.`
          replacementClass="text-gradient-to-br from-orange-500 via-amber-500/80 to-orange-600 dark:from-orange-400/85 dark:via-amber-300 dark:to-orange-400 font-bold"
        />
      </h1>
      <h2
        class="text-xl md:text-3xl mt-1 md:mt-3 italic text-black/70 dark:text-slate-200"
      >
        <LocalizedText
          i18nLocalizedText={i18n.HEADER_SUBTITLE}
          replaceFrom="%%webdev%%"
          replaceTo={i18n.HEADER_SUBTITLE_WEBDEV}
          replacementClass="text-gradient-to-b from-orange-300 to-amber-500 dark:from-orange-200 dark:to-amber-300"
        />
      </h2>

      <p class="mt-4 mx-auto md:text-lg text-pretty">
        <LocalizedText
          i18nLocalizedText={i18n.HEADER_TEXT_1}
          replaceFrom="%%highlight%%"
		  replaceTo={i18n.HEADER_TEXT_1_HIGHLIGHT}
		  replacementClass="text-amber-500 dark:text-amber-300"
          />
        <LocalizedText
          i18nLocalizedText={i18n.HEADER_TEXT_2}
          replaceFrom="%%highlight%%"
          replaceTo={i18n.HEADER_TEXT_2_HIGHLIGHT}
          replacementClass="text-amber-500 dark:text-amber-300"
        />
      </p>
    </div>
  </div>
</SectionContainer>
