---
// File: src/components/Badge.astro
interface Props {
  color?: "blue" | "gray" | "green" | "red" | "yellow" | "indigo";
  class?: string;
}

const { color = "gray", class: className } = Astro.props;

const colorClasses = {
  gray: "bg-gray-100 text-gray-800 dark:bg-gray-800 dark:text-gray-50",
  yellow:
    "bg-amber-600/90 text-amber-50 dark:bg-yellow-100/85 dark:text-orange-800/80",
  green: "bg-green-600/85 text-green-50 dark:bg-green-200/90 dark:text-green-900",
  blue: "bg-blue-600 text-blue-50 dark:bg-blue-200 dark:text-blue-800",
  red: "bg-red-600 text-red-50 dark:bg-red-200 dark:text-red-800",
  indigo:
    "bg-indigo-600 text-indigo-50 dark:bg-indigo-200 dark:text-indigo-800",
};

const badgeClass = `inline-flex items-center px-3 py-1 md:pb-1.5 rounded-2xl font-medium ${colorClasses[color]} ${className || ""}`;
---

<span class={badgeClass}>
  <slot />
</span>
