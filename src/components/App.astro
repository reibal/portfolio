---
// Sections
import Layout from "../layouts/Layout.astro";
import Header from "./sections/header/Header.astro";
import MyProjects from "./sections/projects/MyProjects.astro";
import MySkills from "./sections/skills/MySkills.astro";
import ContactMe from "./sections/contact/ContactMe.astro";
import Footer from "./sections/footer/Footer.astro";

// i18n
import { getI18n } from "../i18n/index.ts";
import AboutMe from "./sections/about/AboutMe.astro";
import Marker from "./Marker.astro";
const currentLocale = Astro.props.currentLocale;
const i18n = getI18n({ currentLocale });
---

<Layout title={i18n.META_TITLE} description={i18n.META_DESCRIPTION}>
  <main class="mt-24 md:mt-32 flex flex-col">
    <Header />

    <Marker id="projects" />
    <MyProjects />

    <Marker id="about" />
    <div class="bg-slate-100 dark:bg-slate-800/50">
      <AboutMe />
    </div>

    <Marker id="skills" />
    <MySkills />

    <Marker id="contact" />
    <div class="bg-slate-100 dark:bg-slate-800/50">
      <ContactMe />
    </div>
  </main>

  <Footer />
</Layout>
